
{
  "compilerOptions": {
    // Build info only works with incremental/composite builds
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // Target/lib/module
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    // Resolution & module syntax for bundlers like Vite
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    // General
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@central-logos/*": ["../../Central Library/Image Assets/Logos/*"]
    },
    "noEmit": true,
    "jsx": "react-jsx",

    // Lint-like compiler checks
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true

    // Removed invalid/unknown options:
    // "erasableSyntaxOnly": true,
    // "noUncheckedSideEffectImports": true
  },
  "include": ["./src", "./src/vite-env.d.ts"]
}
